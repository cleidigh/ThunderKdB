{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "3.0.1",
  "author": "alta88",
  "homepage_url": "https://bitbucket.org/alta8888/browseintab",
  "default_locale": "en",

  "applications": {
    "gecko": {
      "id": "browseintab@mozdev.org",
      "strict_min_version": "91.0a1"
    }
  },

  "permissions": [
    "storage",
    "tabs",
    "<all_urls>"
  ],

  "options_ui": {
    "browser_style": true,
    "page": "content/options.html"
  },

  "icons": {
    "64": "skin/icons/bit64.svg"
  },

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "experiment_apis": {
    "browseintab": {
      "schema": "schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          ["browseintab"]
        ],
        "script": "experiments.js"
      }
    }
 }
}
