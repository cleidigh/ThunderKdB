{
  "manifest_version": 2,
  "name": "Phoenity Buttons",
  "description": "Adds Config Editor, Developer Tools, Preferences, Search Messages and Restart buttons",
  "homepage_url": "https://addons.thunderbird.net/en-US/thunderbird/addon/phoenity-buttons/",
  "version": "4.1",
  "experiment_apis": {
    "phoenityButtonsApi": {
      "schema": "schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "phoenityButtonsApi"
          ]
        ],
        "script": "phoenityButtonsApi.js"
      }
    }
  },
  "background": {
    "scripts": [
      "phoenityButtons.js"
    ]
  },
  "applications": {
    "gecko": {
      "id": "buttons@dillinger",
      "strict_min_version": "78.0"
    }
  },
  "icons": {
    "32": "icons/phoenityButtons.png"
  }
}
