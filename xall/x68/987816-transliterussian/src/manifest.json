{
  "manifest_version": 2,
  "name": "TransliteRussian for Thunderbird",
  "version": "0.4",
  "description": "Печатаем письма по русски на разных клавиатурах в Thunderbird; Typing e-mails in russian on english, german and other keyboards in Thunderbird; E-Mails auf Russisch auf deutschen, englischen und anderen Tastaturen in Thunderbird.",
  "author": "Vlad Koutsenok, it@koutsenok.de",

 "applications": {
    "gecko": {
      "id": "transliterussian@koutsenok.de"
    }
  },

  "permissions": [
    "activeTab"
  ], 
   
  "browser_action": {
  "default_popup": "popup_newmessage.html",
  "default_title": "TransliteRussian",
  "default_icon": "icons/icon32.png"
  },

  "icons": {
        "96": "icons/icon96.png",
		"48": "icons/icon48.png",
        "32": "icons/icon32.png",
        "16": "icons/icon16.png"
    }
}