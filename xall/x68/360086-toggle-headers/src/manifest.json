{
  "manifest_version": 2,
  "name": "Toggle Headers",
  "version": "3.0",
  "author": "Matthias Schoettle",
  "homepage_url": "https://mattsch.com",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "applications": {
    "gecko": {
      "id": "toggle-headers@mattsch.com",
      "strict_min_version": "74.0"
    }
  },
  "experiment_apis": {
    "toggleHeadersApi": {
      "schema": "schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["toggleHeadersApi"]],
        "script": "toggle-headers.js"
      }
    }
  },
  "commands": {
    "toggle-headers": {
      "description": "Toggle Headers",
      "suggested_key": {
        "default": "Ctrl+H",
        "mac": "MacCtrl+H"
      }
    }
  },
  "background": {
    "scripts": ["background.js"]
  }
}
