{
    "manifest_version": 2,
    "applications": {
        "gecko": {
            "id": "{A23E4120-431F-4753-AE53-5D028C42CFDC}",
            "strict_min_version": "78.0"
        }
    },
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "author": "Alexander C. Hubmann-Haidvogel",
    "homepage_url": "https://threadvis.github.io",
    "version": "3.1.1",
    "icons": {
        "32": "chrome/content/images/icon.png"
    },
    "background": {
      "scripts": [
        "background.js"
      ]
    },
    "options_ui": {
      "page": "settings/options.html",
      "browser_style": true
    },
    "experiment_apis": {
      "LegacyPref": {
        "schema": "experiment_apis/LegacyPref/schema.json",
        "parent": {
          "scopes": ["addon_parent"],
          "paths": [["LegacyPref"]],
          "script": "experiment_apis/LegacyPref/implementation.js"
        }
      },
      "LegacyAccountsFolders": {
        "schema": "experiment_apis/LegacyAccountsFolders/schema.json",
        "parent": {
          "scopes": ["addon_parent"],
          "paths": [["LegacyAccountsFolders"]],
          "script": "experiment_apis/LegacyAccountsFolders/implementation.js"
        }
      },
      "WindowListener": {
        "schema": "experiment_apis/WindowListener/schema.json",
        "parent": {
          "scopes": ["addon_parent"],
          "paths": [["WindowListener"]],
          "script": "experiment_apis/WindowListener/implementation.js"
        }
      }
    },
    "default_locale": "en"
}
