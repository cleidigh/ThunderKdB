<!--
 Filter Editor Overlay for Thunderbird 67 and newer
-->

<?xml-stylesheet href="chrome://enigmail/skin/enigmail.css" type="text/css"?>

<!DOCTYPE window SYSTEM "chrome://enigmail/locale/enigmail.dtd" >


<overlay id="enigmailFilterEditorOverlay"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <script type="application/x-javascript" src="chrome://enigmail/content/ui/enigmailFilterEditorOverlay.js"/>

  <dialog insertafter="statusbar" id="FilterEditor">
    <hbox id="enigmailInfobar" style="min-height: 1em !important;" hidden="true">
      <image class="enigmailWarningIcon"/>
      <label value="&enigmail.filterEditor.moveError.label;"/>
    </hbox>
  </dialog>
</overlay>
