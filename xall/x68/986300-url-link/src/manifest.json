{
    "manifest_version": 2,
    "name": "__MSG_extensionName__",
    "version": "3.5.2",
    "description": "__MSG_extensionDescription__",
    "author": "Neil Bird",
    "homepage_url": "https://github.com/fnxweb/urllink",
    "default_locale": "en_US",

    "applications": {
        "gecko": {
            "id": "{139a120b-c2ea-41d2-bf70-542d9f063dfd}",
            "strict_min_version": "68.9.0",
            "strict_max_version": "91.*"
        }
    },

    "icons": {
        "48": "icons/urllink-48.png",
        "96": "icons/urllink-96.png"
    },

    "background": {
        "scripts": [ "common.js", "background.js" ]
    },

    "options_ui": {
        "browser_style": true,
        "page": "preferences.html",
        "open_in_tab": true
    },

    "experiment_apis": {
        "UrlLinkShellApi": {
            "schema":"UrlLinkShellApi.json",
            "parent" : {
                "scopes" : ["addon_parent"],
                "script" : "UrlLinkShellApi.js",
                "paths" : [["urllink", "shell"]]
            }
        }
    },

    "permissions": [
        "clipboardWrite",
        "menus",
        "storage",
        "tabs"
        ]
}
