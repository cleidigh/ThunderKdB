{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "version": "4.2.1",
  "author": "Hopsware LLC",
  "developer": {
    "name": "Andrew Van Tassel",
    "url": "https://www.mailhops.com"
  },
  "applications": {
    "gecko": {
      "id": "thunderbird@mailhops.com",
      "strict_min_version": "74.0"
    }
  },
  "default_locale": "en",
  "icons": {
    "32": "images/mailhops32.png"
  },
  "experiment_apis": {
    "mailHopsUI": {
      "schema": "schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["mailHopsUI"]],
        "script": "js/experiment_apis.js"
      }
    }
  },
  "options_ui": {
    "page": "content/preferences.html",
    "open_in_tab": true
  },
  "permissions": [
    "accountsRead",
    "messagesRead", 
    "storage"
  ],
  "message_display_action": {
  },
  "background": {
    "scripts": [
      "js/utils.js", 
      "js/mailhops.js", 
      "js/preferences.js", 
      "js/bootstrap.js"
    ]
  }
}