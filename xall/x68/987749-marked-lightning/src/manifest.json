{
  "manifest_version": 2,
  "name": "marked-lightning",
  "description": "Extension  for Lightning: Allows the use of Markdown in Task descriptions and renders them as HTML in the TaskView.",
  "version": "0.1.3",
  "author": "Mikolai GÃ¼tschow",
  "homepage_url": "https://gitlab.com/ialokim/marked-lightning",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "applications": {
    "gecko": {
      "id": "marked-lightning@ialokim",
      "strict_min_version": "68.0"
    }
  },
  "experiment_apis": {
    "BootstrapLoader": {
      "schema": "api/BootstrapLoader/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["BootstrapLoader"]],
        "script": "api/BootstrapLoader/implementation.js"
      }
    }
  }
}
