{
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "TaskviewStyles@Sungho.Hwang",
      "strict_min_version": "78.0"
    }
  },
  "name": "TaskviewStyles",
  "version": "3.1",
  "description": "Change taskview styles",
  "icons": {
    "32": "icons/fontstyle.png"
  },
  "browser_action": {
    "default_icon": "icons/fontstyle.png",
    "default_title": "TaskviewStyles",
    "default_popup": "popup.html"
  },
 "experiment_apis": {
    "SetStyle": {
      "schema": "api/SetStyle/schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "SetStyle"
          ]
        ],
        "script": "api/SetStyle/implementation.js"
      }
    }
  }
}