{
  "manifest_version": 2,
  "name": "Search Button",
  "description": "Toolbar button to invoke message search dialog window.",
  "version": "1.0.1",
  "author": "Idea: C-E, Code: darktrojan",
  "icons": {
      "16": "search.svg",
      "24": "search.svg",
      "32": "search.svg",
      "48": "search.svg",
      "64": "search.svg",
      "96": "search.svg"
  },
   "applications": {
      "gecko": {
         "id": "SearchButton@pharqcon.com",
         "strict_min_version": "68.0",
         "strict_max_version": "93.0"
      }
   },
  "experiment_apis": {
    "myapi": {
      "schema": "schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "myapi"
          ]
        ],
        "script": "implementation.js"
      }
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Search",
    "default_icon": "search.svg"
  }
}