{
  "manifest_version": 2,
  "name": "__MSG_extensionname__",
  "short_name": "CS2C",
  "description": "__MSG_extensiondescription__",
  "version": "3.8",
  "author": "GÃ¼nter Gersdorf",
  "homepage_url": "https://www.ggbs.de/extensions/CopySent2Current.html",
  "applications": {
    "gecko": {
      
      "id": "copysent2current@ggbs.de",
      "strict_min_version": "78.0"
    }
  },
  // also see https://firefox-source-docs.mozilla.org/toolkit/components/extensions/webextensions/basics.html
  "experiment_apis": {
    "cs2c": {
      "schema": "cs2c_schema.json",
      "parent": {
        "scopes": [ "addon_parent" ],
        "paths": [ [ "cs2c" ] ],
        "script": "cs2c_implementation.js",
        "events": ["startup"]
      }
    },
    "LegacyMenu": {
      "schema": "LegacyMenu_schema.json",
      "parent": {
        "scopes": [ "addon_parent" ],
        "paths": [ [ "LegacyMenu" ] ],
        "script": "cs2c_lm_implementation.js"
      }
    }
  },
  "background": {
    "scripts": ["cs2c_background.js"]
  },
  "icons": {
    "32": "content/skin/copyMailIcon.png",
    "48": "content/skin/copyMailIcon48.png"
  },
  "options_ui": {
    "page": "cs2c_options.html",
    //"browser_style": true,
    "open_in_tab": true
  },
  "permissions": [
    "compose",
    "tabs",
    "activeTab",
    "storage",
    "accountsRead"
  ],
  "browser_action": {
    "browser_style": true,
    "default_icon": {
			"32": "content/skin/copyMailIcon.png",
			"48": "content/skin/copyMailIcon48.png"
    },
    "default_title": "__MSG_extensionname__"
  },
