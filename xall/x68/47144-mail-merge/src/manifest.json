{
	
	"name": "Mail Merge",
	"version": "7.3.0",
	"description": "Create and Save or Send Multiple Individual and Personalized Messages from a Draft",
	"author": "Alexander Bergmann",
	
	"default_locale": "en",
	
	"applications": {
		"gecko": {
			"id": "mailmerge@example.net",
			"strict_min_version": "78.0a1",
			"strict_max_version": "78.*"
		}
	},
	
	"icons": {
		"16": "skin/icon16.png",
		"24": "skin/icon24.png",
		"32": "skin/icon32.png",
		"48": "skin/icon48.png",
		"64": "skin/icon64.png"
	},
	
	"compose_action": {
		"default_title": "Mail Merge",
		"default_icon": {
			"16": "skin/icon16.png",
			"24": "skin/icon24.png",
			"32": "skin/icon32.png",
			"48": "skin/icon48.png",
			"64": "skin/icon64.png"
		}
	},
	
	"experiment_apis": {
		"mailmerge": {
			"schema": "experiment/schema.json",
			"parent": {
				"scopes": ["addon_parent"],
				"paths": [["mailmerge"]],
				"script": "experiment/implementation.js",
				"events": ["startup"]
			}
		}
	},
	
	"background": {
		"scripts": ["background.js"]
	},
	
	"manifest_version": 2
	
}
