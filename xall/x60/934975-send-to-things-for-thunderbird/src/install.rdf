<RDF xmlns="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:em="http://www.mozilla.org/2004/em-rdf#">
  <Description about="urn:mozilla:install-manifest">

    <em:id>send-to-things-tb@mozilla.kewis.ch</em:id>
    <em:version>1.0</em:version>
    <em:type>2</em:type>

    <!-- Target Application this extension can install into,
         with minimum and maximum supported versions. -->
    <em:targetApplication>
      <Description>
        <!-- Thunderbird -->
        <em:id>{3550f703-e582-4d05-9a08-453d09bdfdc6}</em:id>
        <em:minVersion>52.0</em:minVersion>
        <em:maxVersion>60.*</em:maxVersion>
      </Description>
    </em:targetApplication>

    <!-- Front End MetaData -->
    <em:name>Send to Things</em:name>
    <em:description>Send current email to Things</em:description>
    <em:creator>Philipp Kewisch</em:creator>
    <em:homepageURL>http://mozilla.kewis.ch/</em:homepageURL>
    <em:iconURL>chrome://send-to-things/skin/things.png</em:iconURL>
  </Description>
</RDF>
